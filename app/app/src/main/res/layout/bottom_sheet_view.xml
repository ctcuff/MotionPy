<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/send_command"
        android:textSize="16sp" />

    <TextView
        style="@style/ClickableText"
        android:id="@+id/tv_start"
        android:drawableStart="@drawable/ic_play_arrow"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/command_start"/>

    <TextView
        style="@style/ClickableText"
        android:id="@+id/tv_pause"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_pause"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/command_pause" />

</LinearLayout>